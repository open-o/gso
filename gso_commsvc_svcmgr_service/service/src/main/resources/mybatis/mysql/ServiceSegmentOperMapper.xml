<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.openo.gso.mapper.ServiceSegmentOperMapper">
    <resultMap type="org.openo.gso.model.servicemo.ServiceSegmentOperation" id="ServiceSegmentOperationResultMap">
        <result property="serviceSegmentId" column="serviceSegmentId" />
        <result property="serviceSegmentType" column="serviceSegmentType" />
        <result property="jobId" column="jobId" />
        <result property="status" column="status" />
        <result property="progress" column="progress" />
        <result property="errorCode" column="errorCode" />
        <result property="statusDescription" column="statusDescription"/>
    </resultMap>

    <insert id="insert" parameterType="org.openo.gso.model.servicemo.ServiceSegmentOperation">
        insert into
        t_lcm_svcsegment_operation
        (serviceSegmentId,serviceSegmentType,jobId,status,progress,errorCode,statusDescription)
        values(#{serviceSegmentId},#{serviceSegmentType},#{jobId},#{status},#{progress},#{errorCode},#{statusDescription})
    </insert>
    
    <update id="updateJobId" parameterType="org.openo.gso.model.servicemo.ServiceSegmentOperation">
        update t_lcm_svcsegment_operation set jobId = #{jobId} 
        where serviceSegmentId = #{serviceSegmentId} and serviceSegmentType = #{serviceSegmentType}
    </update>
    
    <update id="updateStatus" parameterType="org.openo.gso.model.servicemo.ServiceSegmentOperation">
        update t_lcm_svcsegment_operation set status = #{status}, errorCode = #{errorCode}
        where serviceSegmentId = #{serviceSegmentId} and serviceSegmentType = #{serviceSegmentType}
    </update>

</mapper>